
@{
    ViewData["Title"] = "Обратная связь";
    @model MySite.Models.FeedbackFormModel
}

<link rel="stylesheet" href="/css/style.css" />
<link rel="stylesheet"
      href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css">

<nav class="navbar navbar-inverse">
    <div class="container">
        <ul class="nav navbar-nav ul1">
            <li><a asp-area="" asp-controller="Lab" asp-action="Index">ScrollMagic</a></li>
            <li><a asp-area="" asp-controller="Feedback" asp-action="Index">Обратная связь</a></li>
        </ul>
    </div>
</nav>


<br />
<h2 margin="0 5% 0 5%">Обратная связь</h2>
<br />


<form asp-action="Send" asp-controller="Feedback" style="margin: 15px">    
    <br />
    <p>
        Введите Email:
        <br />
        <textarea asp-for="email" maxlength="50" rows="1" cols="50"></textarea>
        <span asp-validation-for="email" />
    </p>
    <p>
        Введите тему сообщения :
        <br />
        <textarea asp-for="theme" maxlength="50" rows="1" cols="50"></textarea>
        <span asp-validation-for="theme" />
    </p>
    <p>
        Введите текст сообщения :
        <br />
        <textarea  asp-for="message" maxlength="2000" rows="5" cols="50"></textarea>
        <span asp-validation-for="message" />
    </p>
    <p><input type="submit" value="Отправить" /></p>
</form>


@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
